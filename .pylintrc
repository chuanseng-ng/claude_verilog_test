[MAIN]
# Specify a score threshold under which the program will exit with error.
fail-under=9.5

# Use multiple processes to speed up Pylint.
jobs=0

[MESSAGES CONTROL]
# Disable specific warnings that are acceptable for this project
disable=
    # Design - acceptable for instruction execution models
    too-many-instance-attributes,
    too-many-arguments,
    too-many-positional-arguments,
    too-many-branches,
    too-many-statements,
    too-many-locals,
    # Test classes naturally have many test methods
    too-many-public-methods,
    # Duplicate code in immediate value decoding (minor, could extract later)
    duplicate-code,
    # Attributes defined in reset() method is an acceptable pattern
    attribute-defined-outside-init

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,x,y,z,pc,rd,rs1,rs2,imm,op,insn,addr,val,val1,val2,tid,bid

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=12

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=20

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of public methods for a class
max-public-methods=35

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of statements in function / method body
max-statements=65
